<div class="container my-15">
  <h1>My tasks</h1>
    <% @tasks.each do |task| %>
      <% if task.completed %>
      <i class="fa fa-check-circle"></i>
      <% else %>
      <i class="fa fa-circle"></i>
      <% end %>
      <%= link_to task.title.upcase, task_path(task) %>
        <p><%= link_to "Delete", task_path(task),
            method: :delete,
            data: { confirm: "Are you sure?" }%> </p>
    <% end %>

  <p> <%= link_to "Add a new task", tasks_new_path %> </p>
</div>
